{{ define "main" }}
  <main>
    <h1>Postingan Terbaru</h1>
    {{ range .Paginator.Pages }}
      {{ $page := . }}
      <article>
        {{ with .Params.thumbnail }}
          {{ $img := resources.Get . }}
          {{ $thumb := $img.Fill "100x100 center" }}
          <img src="{{ $thumb.RelPermalink }}" alt="{{ $page.Title }}">
        {{ end }}
        <h2><a href="{{ .RelPermalink }}">{{ .Title }}</a></h2>
      </article>
    {{ end }}
  </main>
{{ end }}
